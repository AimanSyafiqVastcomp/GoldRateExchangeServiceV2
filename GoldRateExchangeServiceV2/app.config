<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<startup>
		<supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1" />
	</startup>
	<appSettings>
		<!-- Select website option: 1 for TTTBullion, 2 for MSGold, 3 for MKSPamp -->
		<add key="WebsiteOption" value="3" />

		<add key="UrlOption1" value="https://tttbullion.com/rates" />
		<add key="UrlOption2" value="https://msgold.com.my/" />
		<add key="UrlOption3" value="https://www.mkspamp.com.my/pricing" />

		<add key="ConnectionString" value="Data Source=LAPTOP-NBAO3H83;Initial Catalog=GoldRatesDB;User ID=sa;Password=1234;" />

		<add key="CompanyName1" value="TTTBullion" />
		<add key="CompanyName2" value="MSGold" />
		<add key="CompanyName3" value="MKSPamp" />

		<!-- Timer configuration - how often to extract data (seconds) -->
		<add key="ExtractionIntervalSeconds" value="120" />

		<!-- Initial delay before first extraction (milliseconds) -->
		<add key="InitialDelayMilliseconds" value="100" />

		<!-- Error handling -->
		<add key="MaxConsecutiveErrors" value="3" />
		<add key="AutoSwitchWebsiteOnError" value="true" />

		<!-- Web scraping timeouts -->
		<add key="NavigationTimeoutMs" value="30000" />
		<add key="WaitAfterNavigationMs" value="5000" />
		<add key="ScriptTimeoutMs" value="60000" />

	</appSettings>
	<runtime>
		<assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
			<dependentAssembly>
				<assemblyIdentity name="System.Threading.Tasks.Extensions" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.2.0.1" newVersion="4.2.0.1" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Memory" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.1.1" newVersion="4.0.1.1" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Buffers" publicKeyToken="cc7b13ffcd2ddd51" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.3.0" newVersion="4.0.3.0" />
			</dependentAssembly>
			<dependentAssembly>
				<assemblyIdentity name="System.Runtime.CompilerServices.Unsafe" publicKeyToken="b03f5f7f11d50a3a" culture="neutral" />
				<bindingRedirect oldVersion="0.0.0.0-4.0.6.0" newVersion="4.0.6.0" />
